<div id="signup" class="container mt-5">
  <form class="mt-5">
    <h6 class="form-title mt-3">CREATE A PROFILE</h6>
    <hr>
    <div class="form-row mt-3">

      <div class="col">
        <Label>First Name : </Label>
        <input id="firstName" type="text" class="form-control" placeholder="John">
        <ul id="suggestions" class="list-group"></ul>
      </div>

      <div class="col">
        <Label>Last Name : </Label>
        <input id="lastName" type="text" class="form-control" placeholder="Doe">
        <ul id="suggestions" class="list-group"></ul>
      </div>

    </div>

    <div class="form-row mt-3">

      <div class="col">
        <Label>Email Address : </Label>
        <br>
            <input id="email" type="email" name="emailaddress"  class="form-control" >
      </div>
      
      <div class="col">
        <Label>Birthdate : </Label>
        <input id="birthdate" type="date" class="form-control" placeholder="Date">
        <ul id="suggestions" class="list-group"></ul>

       </div>
    </div>

    <div class="form-row mt-3">

      <div class="col">
        <Label>Gender : </Label>
        <br>
            <input type="radio" name="gender" value="male"> Male<br>
            <input type="radio" name="gender" value="female"> Female<br>
            <input type="radio" name="gender" value="other"> Prefer Not to Answer<br>
      </div>

      <div class="col">
        <Label>Relationship Status : </Label>
        <br>

            <input type="radio" name="relationship" value="male"> Single<br>
            <input type="radio" name="relationship" value="female"> Married<br>
            <input type="radio" name="relationship" value="other"> Prefer Not to Answer<br>
            <ul id="suggestions" class="list-group"></ul>

       </div>
    </div>

    <div class="form-row mt-3">

      <div class="col">
        <Label>Height in CM : </Label>
        <br>
            <input id="height" type="text" name="height" class="form-control" >
      </div>

      <div class="col">
        <Label>Hair Color : </Label>
        <br>
            <input id="hairColor" type="text" name="hairColor" class="form-control" >
            <ul id="suggestions" class="list-group"></ul>
       </div>
    </div>
    
    <div class="form-row mt-3">

        <Label>Insert Bio : </Label>
            <input id="bio" type="text" name="bio" class="form-control" >
    </div>

    <div class="form-row mt-3">

        <Label>Insert Tag Line : </Label>
            <input type="text" name="tagline"  class="form-control" >
    </div>
    
    <div class="form-row mt-3">

        <Label>Profile Image URL : </Label>
            <input id="imageUrl" type="text" name="image" class="form-control" >
    </div>

    <div class="signup-button">
      <button type="submit" class="btn btn-lg mt-5 col-4">Create Profile</button>
    </div>

    </form>
</div>
